<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>
			<converter type="fr.iagl.gamification.converter.CustomStudentPointsFieldsConverter">
				<class-a>fr.iagl.gamification.model.ClassModel</class-a>
				<class-b>fr.iagl.gamification.entity.ClassEntity</class-b>
			</converter>
		</custom-converters>
	</configuration>

	<!-- ClassMapper -->
	<mapping map-id="ClassMapper">
		<class-a>fr.iagl.gamification.model.ClassModel</class-a>
		<class-b>fr.iagl.gamification.entity.ClassEntity</class-b>
		<field>
			<a>className</a>
			<b>name</b>
		</field>
		<field>
			<a>id</a>
			<b>id</b>
		</field>
	</mapping>
	
</mappings> 